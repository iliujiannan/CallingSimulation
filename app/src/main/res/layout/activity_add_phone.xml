<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#EFEFF0"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="添加来电"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/text_confirm_border"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="12dp" />
        <View android:layout_width="match_parent"
              android:layout_height="0.2dp"
              android:background="#B8C1C5"
              android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/repeat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="#FEFEFE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="重复"
                android:textColor="#000000"
                android:textSize="16dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/repeat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="44dp"
                android:text="每天"
                android:textColor="#B8C1C5"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_chevron_right_black_24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="70dp"
                android:background="#B8C1C5" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/scheme_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="#FEFEFE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="对话模式"
                android:textColor="#000000"
                android:textSize="16dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/scheme_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="44dp"
                android:text="自定义对话"
                android:textColor="#B8C1C5"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_chevron_right_black_24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="70dp"
                android:background="#B8C1C5" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/voice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="#FEFEFE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="声音"
                android:textColor="#000000"
                android:textSize="16dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/void_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="44dp"
                android:text="男声"
                android:textColor="#B8C1C5"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_chevron_right_black_24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="70dp"
                android:background="#B8C1C5" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FEFEFE">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="响铃后删除此来电"
                android:textColor="#000000"
                android:textSize="16dp"
                android:typeface="normal" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/del_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="35dp"
                android:layout_marginTop="45dp"
                android:background="#FEFEFE"
                android:checked="true"
                android:thumb="@drawable/shxy_switch_selector"
                app:showText="false"
                app:track="@drawable/shxy_switch_bk" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="60dp"

                android:background="#B8C1C5" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FEFEFE">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="来电联系人"
            android:textColor="#000000"
            android:textSize="16dp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/caller"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:singleLine="true"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:hint="输入联系人姓名"
            android:maxLines="1"
            android:textSize="16dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:background="#B8C1C5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="60dp"

            android:background="#B8C1C5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FEFEFE">


        <TextView
            android:id="@+id/add_phone_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="将在0天0小时0分后来电"
            android:textColor="#B8C1C5"
            android:textSize="16dp"
            android:typeface="normal" />

        <View
            android:id="@+id/temp_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="89dp"
            android:background="#B8C1C5" />

        <View
            android:id="@+id/temp_line_1"
            android:layout_width="0.5dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:background="#B8C1C5" />

        <com.ljn.callingsimulation.PickerView
            android:id="@+id/hour_pv"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="110dp" />

        <TextView
            android:id="@+id/hour_tv"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_alignTop="@+id/hour_pv"
            android:layout_toEndOf="@+id/hour_pv"
            android:layout_toRightOf="@id/hour_pv"
            android:gravity="center"
            android:text="时"
            android:textColor="#ffaa33"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <com.ljn.callingsimulation.PickerView
            android:id="@+id/minute_pv"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="110dp"
            android:layout_toRightOf="@id/hour_pv" />

        <TextView
            android:id="@+id/minute_tv"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_alignTop="@+id/minute_pv"
            android:layout_toEndOf="@+id/minute_pv"
            android:layout_toRightOf="@+id/minute_pv"
            android:gravity="center"
            android:text="分"
            android:textColor="#ffaa33"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="normal" />
    </RelativeLayout>

</LinearLayout>



