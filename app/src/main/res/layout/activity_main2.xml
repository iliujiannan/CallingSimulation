<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/calling">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:transitionName="startAnim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:backgroundTint="@color/colorIc"
        android:src="@drawable/ic_android_black_24dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/name"
        android:textSize="18sp"
        android:text="137 3482 0127"
        android:textColor="#adadad"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:text="内蒙古呼和浩特 联通"
        android:textColor="#adadad"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="165dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/call_time"
        android:textSize="18sp"
        android:text="00:06"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="185dp"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="60dp"
        android:id="@+id/end"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_call_end_black_24dp"
        app:backgroundTint="#f52222"
        android:layout_height="60dp">
    </android.support.design.widget.FloatingActionButton>

    <TextView
        android:layout_width="60dp"
        android:text="录音"
        android:gravity="center"
        android:textColor="#d5d5d5"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="20dp"
        android:layout_height="60dp">
    </TextView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="100dp"
        android:layout_height="wrap_content">

        <include layout="@layout/item4" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp"
        android:layout_height="wrap_content">
        <include layout="@layout/item5" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="100dp"
        android:layout_height="wrap_content">
        <include layout="@layout/item6" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="180dp"
        android:layout_height="wrap_content">

        <include layout="@layout/item1" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="180dp"
        android:layout_height="wrap_content">
        <include layout="@layout/item2" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="180dp"
        android:layout_height="wrap_content">
        <include layout="@layout/item3" />
    </FrameLayout>

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="免提"
        android:gravity="center"
        android:textColor="#d5d5d5"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp">
    </TextView>


</FrameLayout>
