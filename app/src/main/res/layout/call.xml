<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:backgroundTint="@color/colorIc"
        android:src="@drawable/ic_android_black_24dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:id="@+id/name"
        android:text="137 3482 0127"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:text="内蒙古呼和浩特 联通"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="170dp"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call"
        android:transitionName="startAnim"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="#00ff00"
        android:src="@drawable/ic_call_black_24dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom|center"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="#cecece"
        android:src="@drawable/ic_sms_black_24dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="60dp"
        android:layout_gravity="bottom|right"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_end"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/ic_call_end_black_24dp"
        app:backgroundTint="#f52222" />

